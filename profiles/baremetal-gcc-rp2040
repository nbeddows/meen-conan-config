[settings]
arch=armv6
build_type=MinSizeRel
compiler=gcc
compiler.cppstd=gnu20
compiler.libcxx=libstdc++11
compiler.version=13
os=baremetal
[options]
&:fPIC=False
&:shared=False
&:with_rp2040=True
unity*:fPIC=False
[conf]
tools.cmake.cmaketoolchain:user_toolchain+={{profile_dir}}/rp2040_vars.cmake
# Required for pi pico sdk 2.x
#tools.build:defines=["__ARM_ARCH_6M__"]
tools.build:cflags=["-mcpu=cortex-m0-mthumb", "-march=armv6-m"]
tools.build:cxxflags=["-mcpu=cortex-m0-mthumb", "-march=armv6-m"]
[buildenv]
CC=arm-none-eabi-gcc
CXX=arm-none-eabi-g++
LD=arm-none-eabi-ld
